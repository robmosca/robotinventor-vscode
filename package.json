{
  "name": "robotinventor",
  "displayName": "robotinventor",
  "description": "A Microsoft Visual Studio Code extension to program LEGO速 Mindstorms速 Robot Inventor in MicroPython",
  "version": "0.0.1",
  "publisher": "robmosca",
  "repository": "https://github.com/robmosca/robotinventor-vscode",
  "engines": {
    "vscode": "^1.53.0",
    "node": "^18.18.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:ri5devBrowser",
    "onCommand:ri5devBrowser.action.connectDevice"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ri5devBrowser.action.connectDevice",
        "title": "Connect to a device",
        "category": "ri5dev"
      },
      {
        "command": "ri5devBrowser.action.disconnectDevice",
        "title": "Disconnect",
        "category": "ri5dev"
      },
      {
        "command": "ri5devBrowser.runProgram",
        "title": "Run program",
        "category": "ri5dev"
      },
      {
        "command": "ri5devBrowser.stopProgram",
        "title": "Stop program",
        "category": "ri5dev"
      },
      {
        "command": "ri5devBrowser.moveProgram",
        "title": "Move program",
        "category": "ri5dev"
      },
      {
        "command": "ri5devBrowser.removeProgram",
        "title": "Remove program",
        "category": "ri5dev"
      },
      {
        "command": "ri5devBrowser.uploadProgram",
        "title": "Upload program",
        "category": "ri5dev"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "ri5devBrowser.runProgram",
          "when": "viewItem == fullProgramSlot"
        },
        {
          "command": "ri5devBrowser.stopProgram",
          "when": "viewItem == device"
        },
        {
          "command": "ri5devBrowser.action.disconnectDevice",
          "when": "viewItem == device"
        },
        {
          "command": "ri5devBrowser.moveProgram",
          "when": "viewItem == fullProgramSlot"
        },
        {
          "command": "ri5devBrowser.removeProgram",
          "when": "viewItem == fullProgramSlot"
        },
        {
          "command": "ri5devBrowser.uploadProgram",
          "when": "viewItem == fullProgramSlot || viewItem == emptyProgramSlot"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "ri5devBrowser",
          "name": "ri5dev device browser"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ri5devBrowser",
        "contents": "No LEGO速 Mindstorms速 Robot Inventor hub found [learn more](https://www.lego.com/en-es/product/robot-inventor-51515).\n[Add hub](command:ri5devBrowser.action.connectDevice)"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "coverage": "nyc npm test",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "typecheck": "tsc --noEmit -p ./",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.3",
    "@types/serialport": "^8.0.1",
    "@types/sinon": "^17.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "chai": "^4.2.0",
    "chai-match": "^1.1.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.5.0",
    "ts-mock-imports": "^1.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "serialport": "^12.0.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "include": [
      "src/**/*.ts",
      "out/**/*.js"
    ],
    "exclude": [
      "src/test/*"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "report-dir": "out/coverage"
  },
  "packageManager": "pnpm@8.11.0"
}
